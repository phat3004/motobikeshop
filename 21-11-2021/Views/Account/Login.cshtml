@model _21_11_2021.Models.UserLogin
@{ 
    Layout = null;
}

<form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Email" class="col-md-3 col-form-label text-md-right">E-Mail</label>
        <div class="col-md-7">
            <input asp-for="Email" id="email_address" class="form-control" required autofocus>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="MatKhau" class="col-md-3 col-form-label text-md-right">Mật khẩu</label>
        <div class="col-md-7">
            <input asp-for="MatKhau" type="password" id="password" class="form-control" required>
            <span asp-validation-for="MatKhau" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-5 offset-md-3">
            <div class="checkbox">
                <label>
                    <input type="checkbox" asp-for="NhoTK" /> @Html.DisplayNameFor(model => model.NhoTK)
                </label>
            </div>
        </div>
    </div>

    <div class="col-md-5 offset-md-3">
        <div class="form-group">
            <input type="submit" value="Đăng nhập" class="btn btn-primary" />
            @*<a asp-action="ForgotPassword" class="btn btn-link">
                Quên mật khẩu?
            </a>*@
            <a class="btn btn-link" onclick="showInPopUp('/Account/ForgotPassword','Quên mật khẩu')" style="color:blue;">Quên mật khẩu?</a>
        </div>
    </div>
</form>
<div class="text-center w-full p-t-42 p-b-22">
    <span class="txt1">
        Hoặc đăng nhập với
    </span>
</div>
<div style="text-align:center">
    <partial name="_ExternalAuthentication" />
</div>
<div class="modal" tabindex="-1" role="dialog" id="form-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

