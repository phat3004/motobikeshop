@model _21_11_2021.Models.ExternalLogin
@{ 
    Layout = null;
}
<form asp-controller="Account" asp-action="ForgotPassword" method="post">
    <div class="input-group mb-3">
        <input asp-for="Email" type="email" class="form-control" placeholder="Email">
        <div class="input-group-append">
            <div class="input-group-text">
                <span asp-validation-for="Email" class="fas fa-envelope"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <button type="submit" class="btn btn-primary btn-block">Yêu cầu mật khẩu mới</button>
        </div>
        <!-- /.col -->
    </div>
</form>
<p class="mt-3 mb-1">
    <a class="nav-link btn btn-link text-info" onclick="showInPopUp('/Account/Login','Đăng nhập')" style="color:white;">Đăng nhập</a>
</p>
