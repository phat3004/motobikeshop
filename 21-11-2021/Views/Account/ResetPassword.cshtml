@model _21_11_2021.Models.ResetPassword

<div class="hold-transition login-page">
    <div class="login-box">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a href="~/admin/index2.html" class="h1">Cài đặt mật khẩu mới</a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Mật khẩu mới.</p>
                <form asp-controller="Account" asp-action="ResetPassword" method="post">
                    <div class="input-group mb-3">
                        <input asp-for="MatKhau" type="password" class="form-control" placeholder="Mật khẩu">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span asp-validation-for="MatKhau" class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="XacNhanMK" type="password" class="form-control" placeholder="Xác nhận mật khẩu">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span asp-validation-for="XacNhanMK" class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" asp-for="Email" class="form-control" />
                    <input type="hidden" asp-for="Token" class="form-control" />
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block">Đổi mật khẩu</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

                <p class="mt-3 mb-1">
                    <a asp-controller="Account" asp-action="Login">Đăng nhập</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
</div>
<!-- /.login-box -->
