@model _21_11_2021.Models.UserRegistrationModel
    <div class="hold-transition register-page">
        <div class="register-box">
            <div class="card card-outline card-primary">
                <div class="card-header text-center">
                    <a asp-controller="Account" asp-action="Register" class="h1"><b>Đăng ký</b></a>
                </div>
                <div class="card-body">
                    <p class="login-box-msg">Đăng ký tài khoản mới</p>
                    <form asp-controller="Account" asp-action="Register" method="post">
                        <div class="input-group mb-3">
                            <input asp-for="HoTen" type="text" class="form-control" placeholder="Họ và tên">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span asp-validation-for="HoTen" class="fas fa-user"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span asp-validation-for="Email" class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <input asp-for="SDT" type="tel" class="form-control" placeholder="Số điện thoại">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span asp-validation-for="SDT" class="fas fa-phone-square"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <label asp-for="GioiTinh" class="form-control">Giới tính</label>

                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <select asp-for="GioiTinh" asp-items="Html.GetEnumSelectList<GioiTinh>()">
                                        <option selected="selected" value="">Please select</option>
                                    </select>
                                    <span asp-validation-for="GioiTinh" class="text-danger" />
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <input asp-for="DiaChi" type="text" class="form-control" placeholder="Địa chỉ">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span asp-validation-for="DiaChi" class="fas fa-address-book"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <input asp-for="MatKhau" type="password" class="form-control" placeholder="Mật khẩu">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span asp-validation-for="MatKhau" class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <input asp-for="XacNhanMK" type="password" class="form-control" placeholder="Xác nhận mật khẩu">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span asp-validation-for="XacNhanMK" class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-8">
                                <div class="icheck-primary">
                                    <input type="checkbox" id="agreeTerms" name="terms" value="agree" required>
                                    <label for="agreeTerms">
                                        Chấp nhận điều <a href="#">khoản</a>
                                    </label>
                                </div>
                            </div>
                            <hr>
                        </div>
                        <div class="social-auth-links text-center">
                            <a href="#" class="btn btn-block btn-primary">
                                <button type="submit" class="btn btn-primary btn-block">Đăng ký</button>
                            </a>
                        </div>
                    </form>
                    <a class="nav-link btn btn-link text-info" onclick="showInPopUp('/Account/Login','Đăng nhập')" style="color:white;">Có tài khoản rồi</a>
                </div>
            </div>
        </div>
    </div>
    <div class="modal" tabindex="-1" role="dialog" id="form-modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                </div>
            </div>
        </div>
    </div>


