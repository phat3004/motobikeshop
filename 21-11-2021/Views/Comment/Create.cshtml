@model _21_11_2021.Areas.admin.Models.DanhGia


    <div class="cart-box-main">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-main table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Hình ảnh</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Bình luận</th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>
                                    @foreach (var item in ViewBag.SanPham)
                                    {
                                            <tr>
                                                <td class="thumbnail-img">
                                                    <a>
                                                        <img class="img-fluid" src="~/pro/@item.HinhAnh" alt="" />
                                                    </a>
                                                </td>
                                                <td class="name-pr">
                                                    <a>
                                                        @item.TenSanPham
                                                    </a>

                                                </td>  
                                                <td class="price-pr">
                                                    <input asp-for="ChiTiet" class="form-control" />
                                                    <span asp-validation-for="ChiTiet" class="text-danger"></span>
                                                    <input type="hidden" asp-for="MaSanPham" class="form-control" value="@item.MaSanPham" />
                                                    <span asp-validation-for="MaSanPham" class="text-danger"></span>
                                                </td>
                                            </tr>
                                    }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row my-5">
                <div class="col-lg-8 col-sm-12"></div>
                <div class="col-lg-4 col-sm-12">
                    <div class="order-box">
                        <hr>
                        <input type="submit" value="Quánh Giá" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </div>

